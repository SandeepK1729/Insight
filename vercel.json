{
  "version": 1.0,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "frontend/build" } },
    { "src": "backend/Insight/wsgi.py", "use": "@vercel/python", "config": { "maxLambdaSize": "50mb" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/Insight/wsgi.py" },
    { "src": "/(.*)", "dest": "frontend/build/" }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "backend.Insight.settings",
    "STATIC_ROOT": "frontend/build/static"
  },
  "public": true
}
